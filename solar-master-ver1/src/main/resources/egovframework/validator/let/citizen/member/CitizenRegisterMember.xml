<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
		<form name="registerMember">
			<field property="name" depends="required">
        		<arg0 key="registerMember.name" />
			</field>	
			<field property="password" depends="required">
        		<arg0 key="registerMember.password.required" />
			</field>
			
			<field property="phone" depends="required">
        		<arg0 key="registerMember.phone" />
			</field>
			
			<field property="number" depends="required">
        		<arg0 key="registerMember.number" />
			</field>
		</form>
    </formset>

</form-validation>